@{
  Layout = "_Layout";
}
<h1>@Model.Name Orders</h1>

<div class="jumbotron">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Order #</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Date Added</th>
      </tr>
    </thead>
    <tbody>
    @if (@Model.Orders.Count == 0)
    {
      <tr>
        <th>0</th>
        <th>Empty</th>
        <th>Empty</th>
        <th>Empty</th>
        <th>Empty</th>
      </tr>
    }
    @for (int i = 0; i < @Model.Orders.Count; i++)
    {
      <tr>
        <th>@Model.Orders[i].Id</th>
        <th>@Model.Orders[i].Title</th>
        <th>@Model.Orders[i].Description</th>
        <th>@Model.Orders[i].Price</th>
        <th>@Model.Orders[i].TodaysDate</th>
      </tr>
    }
    </tbody>
  </table>
</div>

<p><a href="/vendors/@Model.Id/orders/new">Add to order</a></p>
<p><a href="/vendors">Back to vendors</a></p>