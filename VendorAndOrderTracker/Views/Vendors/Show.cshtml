@{
  Layout = "_Layout";
}
<h1>@Model.Name Orders</h1>

<div class="jumbotron row">
  <div class="col-7">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Date Added</th>
          <th>Order #</th>
        </tr>
      </thead>
      <tbody>
      @if (@Model.Orders.Count == 0)
      {
        <tr>
          <th>Empty</th>
          <th>Empty</th>
          <th>Empty</th>
          <th>Empty</th>
          <th>0</th>
        </tr>
      }
      @for (int i = 0; i < @Model.Orders.Count; i++)
      {
        <tr>
          <th>@Model.Orders[i].Title</th>
          <th>@Model.Orders[i].Description</th>
          <th>@Model.Orders[i].Price</th>
          <th>@Model.Orders[i].TodaysDate</th>
          <th>@Model.Orders[i].Id</th>
        </tr>
      }
      </tbody>
    </table>
    <a href="/vendors/@Model.Id/orders/new"><button type="button" class="btn btn-danger btn-lg">Add to order</button></a>
  </div>
  <div class="col-5">
    <span><img src="~/img/bakery.jpg"></span>
  </div>
</div>

