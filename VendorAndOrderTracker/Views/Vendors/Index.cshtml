@{
  Layout = "_Layout";
}
<h1>Vendors</h1>

<div class="jumbotron row">
  <div class="col-7">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Vendor #</th>
          <th>Vendor Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
      @if (Model.Count == 0)
      {
        <tr>
          <th>0</th>
          <th>Empty</th>
          <th>Empty</th>
        </tr>
      }
      @for (int i = 0; i < Model.Count; i++)
      {
        <tr>
          <th>@Model[i].Id</th>
          <th><a href="/vendors/@Model[i].Id">@Model[i].Name</a></th>
          <th>@Model[i].Description</th>
        </tr>
      }
      </tbody>
    </table>
    <a href="/vendors/new"><button type="button" class="btn btn-lg btn-danger">Add a new vendor</button></a>
  </div>
  <div class="col-5">
    <span><img src="~/img/bakery.jpg"></span>
  </div>
</div>



